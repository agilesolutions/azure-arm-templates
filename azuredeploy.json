{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "aksClusterName": {
        "type": "string",
        "metadata": {
          "description": "The name of the AKS cluster."
        }
      },
      "dnsPrefix": {
        "type": "string",
        "metadata": {
          "description": "DNS prefix for the AKS cluster."
        }
      },
      "agentCount": {
        "type": "int",
        "defaultValue": 1,
        "minValue": 1,
        "metadata": {
          "description": "The number of nodes for the Linux agent pool."
        }
      },
      "agentVMSize": {
        "type": "string",
        "defaultValue": "Standard_DS2_v2",
        "metadata": {
          "description": "The size of the Virtual Machine for the agent pool."
        }
      },
      "kubernetesVersion": {
        "type": "string",
        "defaultValue": "1.27.3",
        "metadata": {
          "description": "Kubernetes version for the cluster."
        }
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGrou]",
        "metadata": {
          "description": "Location for the AKS cluster."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.ContainerService/managedClusters",
        "apiVersion": "2023-01-01",
        "name": "[parameters('aksClusterName')]",
        "location": "[parameters('location')]",
        "properties": {
          "kubernetesVersion": "[parameters('kubernetesVersion')]",
          "dnsPrefix": "[parameters('dnsPrefix')]",
          "agentPoolProfiles": [
            {
              "name": "nodepool1",
              "count": "[parameters('agentCount')]",
              "vmSize": "[parameters('agentVMSize')]",
              "osType": "Linux",
              "mode": "System"
            }
          ],
          "enableRBAC": true,
          "networkProfile": {
            "networkPlugin": "azure",
            "loadBalancerSku": "standard"
          }
        }
      }
    ],
    "outputs": {
      "aksClusterName": {
        "type": "string",
        "value": "[parameters('aksClusterName')]"
      },
      "resourceGroupName": {
        "type": "string",
        "value": "[resourceGroup().name]"
      },
      "kubeConfigCommand": {
        "type": "string",
        "value": "[concat('az aks get-credentials --resource-group ', resourceGroup().name, ' --name ', parameters('aksClusterName'))]"
      },
      "kubeConfig": {
        "type": "string",
        "value": "[concat('To access the cluster, use `az aks get-credentials --resource-group ', resourceGroup().name, ' --name ', parameters('aksClusterName'), '`')]"
      },
        "fqdn": {
        "type": "string",
        "value": "[reference(parameters('aksClusterName')).fqdn]"
      }
    }
  }
  